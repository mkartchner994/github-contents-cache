{
  "name": "github-contents-cache",
  "version": "0.0.1",
  "description": "A helpful utility function for retreiving and caching file contents from the GitHub api",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "files": ["dist", "types"],
  "scripts": {
    "build": "npm test && npm run build:cleanDirs && npm run build:esbuild && npm run build:tsc",
    "build:cleanDirs": "rm -rf ./dist/ && rm -rf ./types/",
    "build:esbuild": "esbuild index.ts --bundle --outfile=dist/index.js --platform=node --target=node14 --external:./node_modules/*",
    "build:tsc": "tsc --project tsconfig.json",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkartchner994/github-contents-cache.git"
  },
  "author": "Morgan Kartchner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkartchner994/github-contents-cache/issues"
  },
  "homepage": "https://github.com/mkartchner994/github-contents-cache#readme",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.15",
    "esbuild": "^0.14.19",
    "esbuild-register": "^3.3.2",
    "jest": "^27.5.1",
    "msw": "^0.36.8",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "follow-redirects": "^1.14.8"
  }
}
